<div class="container mb-4">
    <div class="row">
        <div class="col-md-6">
            <h3 class="mt-4 w3-cursive w3-center"><i><%= title %></i></h3>

            <% if (typeof errors != 'undefined') { %>
                <div class="alert alert-danger" role="alert">
                     <ul>
                       <% errors.forEach( error => { %>
                         <li><%= error.msg %> </li>                 
                       <% }) %>
                   </ul>
                </div>
               <% } %>

            <form method="post" action="/voucher" class="mt-4 w3-cursive">
                <div class="mb-3">
                  <label for="nama" class="form-label">Nama Lengkap Anda</label>
                  <input type="text" class="form-control w3-input" id="nama" name="nama" required>
                </div>
                <div class="mb-3">
                  <label for="nohp" class="form-label">No. HP</label>
                  <input type="text" class="form-control w3-input" id="noHP" name="noHP">
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control w3-input" id="email" name="email">
                  </div>
                <div class="mb-3">
                    <label for="qrcode" class="form-label">Kode QR</label>
                    <input type="text" class="form-control" id="qrcode" name="qrcode" value=<%= value %> readonly>
                </div>
                <button type="submit" class="btn w3-black w3-right">Submit</button>
              </form>
        </div>
    </div>
</div>